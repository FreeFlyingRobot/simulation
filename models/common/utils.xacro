<include xmlns:xacro="http://www.ros.org/wiki/xacro">

<xacro:property name="base_height" value="0.59" />
<xacro:property name="base_radius" value="0.15" />

<xacro:macro name="primitive" params="name *origin *geometry">
  <visual name="${name}">
    <xacro:insert_block name="origin"/>
    <xacro:insert_block name="geometry"/>
  </visual>
  <collision name="${name}">
    <xacro:insert_block name="origin"/>
    <xacro:insert_block name="geometry"/>
  </collision>
</xacro:macro>

</include>
